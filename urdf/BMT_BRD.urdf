<?xml version="1.0"?>
<robot name="Phoenix">
	<link name="base_link" />

	<link name="base_yaw" />
	<link name="base_pitch" />
	<link name="base_roll">
		<visual>
			<geometry>
				<cylinder length="1.5" radius="0.4"/>
			</geometry>
			<material name="red">
				<color rgba=".64 0 .1 1" />
			</material>
			<origin rpy="0 1.57 0 " xyz="0 0 0 " />
		</visual>
	</link>

	<link name="base_x" />
	<link name="base_y" />
	<link name="base_z" />

	<link name="stump">
		<visual>
			<geometry>
				<box size="0.6 0.05 0.05" />
			</geometry>
			<material name="grey" >
				<color rgba=".64 .64 .64 1" />
			</material>
			<origin xyz="0.3 0 0" rpy="0 0 0" />
		</visual>
	</link>
	<link name="gripper">
		<visual>
			<geometry>
				<cylinder length="0.15" radius="0.05"/>
			</geometry>
			<material name="grey" />
			<origin xyz="0.075 0 0" rpy="0 1.57 0" />
		</visual>
	</link>
	<link name="IMU_ADIS_16480">
		<visual>
			<geometry>
				<box size="0.05 0.05 0.05" />
			</geometry>
			<material name="blue" >
				<color rgba="0 0 .8 1"/>
			</material>
		</visual>
	</link>		

	<link name="IMU_Vectornav">
		<visual>
			<geometry>
				<box size="0.05 0.05 0.05" />
			</geometry>
			<material name="blue" />
		</visual>
	</link>	

	<joint name="x" type="fixed">
		<parent link="base_link" />
		<child link="base_x" />
		<origin xyz="0 0 0" rpy="0 0 0" />
		<axis xyz="1 0 0" />
	</joint>

	<joint name="y" type="fixed">
		<parent link="base_x" />
		<child link="base_y" />
		<origin xyz="0 0 0" rpy="0 0 0" />
		<axis xyz="0 1 0" />
	</joint>

	<joint name="z" type="fixed">
		<parent link="base_y" />
		<child link="base_z" />
		<origin xyz="0 0 0" rpy="0 0 0" />	
		<axis xyz="0 0 1" />	
	</joint>

	<joint name="yaw" type="continuous">
		<parent link="base_z" />
		<child link="base_yaw" />
		<origin xyz="0 0 0" rpy="0 0 0" />
		<axis xyz="0 0 1" />
	</joint>

	<joint name="pitch" type="continuous">
		<parent link="base_yaw" />
		<child link="base_pitch" />
		<origin xyz="0 0 0" rpy="0 0 0" />
		<axis xyz="0 1 0" />
	</joint>

	<joint name="roll" type="continuous">
		<parent link="base_pitch" />
		<child link="base_roll" />
		<origin xyz="0 0 0" rpy="0 0 0" />	
		<axis xyz="1 0 0" />	
	</joint>

	<joint name="stiff_shoulder" type="fixed">
		<parent link="base_roll" />
		<child link="stump" />
		<origin xyz="0 0 0" rpy="0 0 -1.57" />		
		<axis xyz="0 0 0" />
	</joint>

	<joint name="wrist_rotate" type="continuous">
		<parent link="stump" />
		<child link="gripper" />
		<origin xyz="0.6 0 0" rpy="0 0 0" />		
		<axis xyz="1 0 0" />		
	</joint>

	<joint name="Joint_for_ADIS" type="fixed">
		<parent link="base_roll" />
		<child link="IMU_ADIS_16480" />
		<origin xyz="0.2 0 .4" rpy="0 0 0" />
		<axis xyz="0 0 0 " />
	</joint>

	<joint name="Joint_for_Vectornav" type="fixed">
		<parent link="base_roll" />
		<child link="IMU_Vectornav" />
		<origin xyz="0.3 0 0.4" rpy="0 0 0" />
		<axis xyz="0 0 0 " />
	</joint>	

</robot>


